# VPS Foundation SSH Security Configuration
# Generated by Ansible - do not edit manually

Port {{ vps_ssh_port }}
PermitRootLogin {{ vps_ssh_permit_root_login | ternary('yes', 'no') }}
PasswordAuthentication {{ vps_ssh_password_authentication | ternary('yes', 'no') }}
PubkeyAuthentication {{ vps_ssh_pubkey_authentication | ternary('yes', 'no') }}
X11Forwarding {{ vps_ssh_x11_forwarding | ternary('yes', 'no') }}
AllowUsers {{ vps_ssh_allowed_users | join(' ') }}
ClientAliveInterval {{ vps_ssh_client_alive_interval }}
ClientAliveCountMax {{ vps_ssh_client_alive_count_max }}

# Security enhancements
StrictModes yes
MaxAuthTries 3
MaxSessions 2
LoginGraceTime 30
TCPKeepAlive yes
Compression delayed
UseDNS no
